<%= form_with(model: bug, local: true) do |form| %>
  <% if bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
        <% bug.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-md-6 col-md-offset-3 col-xs-12 mx-auto">
  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :descricao %>
    <%= form.text_area :descricao, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :solucao %>
    <%= form.text_area :solucao, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :projeto_id %>
    <%= form.collection_select(:projeto_id, Projeto.all, :id, :nome, prompt: true) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>
